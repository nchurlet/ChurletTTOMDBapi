<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SmallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:secondaryProgressTint">@color/ratingBarShadowHighlightedColor</item>
        <item name="android:progressBackgroundTint">@color/backGroundmovieCard</item>
    </style>
    <style name="NormalRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">@color/ratingBarAccentColor</item>
        <item name="android:secondaryProgressTint">@color/ratingBarShadowHighlightedColor</item>
        <item name="android:progressBackgroundTint">@color/backGroundmovieCard</item>
    </style>
</resources>
